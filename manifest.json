{
   "manifest_version": 3,
   "name": "AutoRaiders",
   "version": "4.0.2",
   "description": "SR helper",
   "action": {
      "default_popup": "popup.html",
      "default_icon": {
         "48": "icons/icon-128.png",
         "128": "icons/icon-128.png"
      }
   },
   "permissions": [
      "storage",
      "declarativeNetRequestWithHostAccess"
   ],
   "content_scripts": [
      {
         "js": [
            "content_script.js",
            "collector.js",
            "game_mode_manager.js",
            "storage_manager.js",
            "state_handler.js",
            "switch_handler.js",
            "captain_handler.js",
            "inject_handler.js",
            "idle_handler.js",
            "rotation_handler.js"
         ],
         "matches": [
            "https://www.streamraiders.com/*"
         ]
      }
   ],
   "host_permissions": [
      "https://www.streamraiders.com/*"
   ],
   "background": {
      "service_worker": "background.js"
   },
   "icons": {
      "128": "icons/icon-128.png",
      "48": "icons/icon-48.png"
   }
}
{
   "manifest_version": 3,
   "name": "AutoRaiders",
   "version": "2.0.0",
   "description": "SR automator",
   "action": {
      "default_icon": {
         "48": "icons/icon-128.png",
         "128": "icons/icon-128.png"
      }
   },
   "permissions": [
      "storage"
    ],
   "content_scripts": [
      {
         "js": [
            "content_script.js",
            "collector.js",
            "dungeon_manager.js",
            "storage_manager.js",
            "marker_selector.js",
            "unit_selector.js",
            "battle_handler.js"
         ],
         "matches": [
            "https://www.streamraiders.com/*"
         ]
      }
   ],
   "icons": {
      "128": "icons/icon-128.png",
      "48": "icons/icon-48.png"
   }
}